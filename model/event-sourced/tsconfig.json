{
  "compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./package",
		"declaration": true,
		"moduleResolution": "NodeNext",
		"allowImportingTsExtensions": true
  },
  "include": ["./src"]
}
