{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist/esm",
		"declaration": true,
		"moduleResolution": "NodeNext",
		"isolatedModules": false,
		"allowImportingTsExtensions": true
	},
  "include": ["./src"]
}
